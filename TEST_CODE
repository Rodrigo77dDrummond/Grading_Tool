function draw() {
  background(220);
  textSize(15)
  text("Name:", 10, 25);
  text("Date:", 210, 25);
  text("Block:", 10, 50);
  text("Assignment:", 130, 50);
  text("Areas of Improvement:", 10, 90);
  
  Opening();
  Closing();
  Comment();

}

function NAME(){
  studentName = this.value();
}

function DATE(){
  studentDate = this.value();
}

function BLOCK(){
  studentBlock = this.value();
}

function ASMT(){
 studentAsmt = this.value(); 
}

function Opening(){
  opening = "Hello!"
}

function Closing(){
  closing = "Great Job!"
}

